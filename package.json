{
  "name": "berlinale",
  "private": true,
  "type": "module",
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "db:migrate": "bun run --filter @berlinale/ingest db:migrate",
    "db:inspect": "bun run --filter @berlinale/ingest db:inspect",
    "db:query": "bun run --filter @berlinale/ingest db:query",
    "ingest:program": "bun run --filter @berlinale/ingest ingest:program",
    "enrich:imdb": "bun run --filter @berlinale/ingest enrich:imdb",
    "db:verify": "bun run --filter @berlinale/ingest db:verify",
    "test": "bun test"
  }
}
